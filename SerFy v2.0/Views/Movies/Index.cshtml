@model IEnumerable<SerFy_v2._0.Models.Movie>

@{
    ViewBag.Title = "Index";
}

@if (User.IsInRole("Administrador"))
{
    <button class="btn-default btn" style="margin-top:20px" onclick="location.href='@Url.Action("Create", "Movies")'">Create a new movie</button>
}
<div class="container" style="margin-top: 20px">
    <div class="row" style="text-align: left;margin-left: 10px;">
        <h2 class="text-uppercase">Movies</h2>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div onmouseover="this.style.opacity='0.7'" onmouseout="this.style.opacity='1'" class="col-lg-3 col-md-3">
                <div class="card" style="margin-top:20px;">

                    <img class="img-rounded" height="300" width="200" style="object-fit: cover; cursor:pointer;" src="~/Multimedia/Filme/@item.Photograph" onclick="location.href='@Url.Action("Details", "Movies", new { id = item.ID })'">

                    <div class="panel-title">
                        <b>@item.Name</b>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

