@model IEnumerable<SerFy_v2._0.Models.Movie>

@{
    ViewBag.Title = "Index";
}

@*@if (User.IsInRole("V2"))*@

<button class="btn-default btn" style="margin-top:20px">
    @Html.ActionLink("Add", "Create")
</button>

<div class="container" style="margin-top: 20px">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-3">
                <div class="card">

                    <img class="img-rounded" height="300" width="200" style="object-fit: cover; cursor:pointer;" src="~/Multimedia/Filme/@item.Photograph" onclick="location.href='@Url.Action("Details", "Movies", new { id = item.ID })'">

                    <div class="panel-title">
                        <b>@item.Name</b>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

