@model SerFy_v2._0.Models.Movie

@{
    ViewBag.Title = "Details";
}

<div>
    <div class="container">
        @*@if (User.IsInRole("V2"))
        {*@
            <div class="row">
                <div class="col-lg-1">
                    <button class="btn-default btn" style="margin:10px 10px">
                        @Html.ActionLink("Change", "Edit", new { id = Model.ID })
                    </button>
                </div>
                <div class="col-lg-1">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <input type="submit" value="Delete" class="btn btn-default btn-danger" style="margin:10px 10px" />
                    }
                </div>
            </div>
        
        <div class="row">
            <div class="col-lg-4">
                <h2>@Model.Name</h2>
            </div>
            <div class="col-lg-2">
                @*tirar os zeros*@
                <h5><b>Date:</b>@Model.dataDePub</h5>
            </div>
            <div class="col-lg-1">
                <h5><b>Rate:</b>@Model.Rating</h5>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4">
                <img src="~/Multimedia/Filme/@Model.Photograph" width="325" height="500">
            </div>
            <div class="col-lg-8">
                <Iframe height="500" width="900" src="@Model.Trailer" class="glyphicon-scale"></Iframe>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <p>@Model.sinopse</p>
            </div>
        </div>
        <hr>



        <h5>Actors</h5>
        <table class="table-responsive" style="width:100%">
            <tr>
                <th>Name</th>
                <th>role</th>
            </tr>
            @foreach (var item in Model.CharactersList)
            {
                <tr style="cursor:pointer">

                    <td onclick="location.href='@Url.Action("Details", "Actors", new { id = item.actor.ID })'"><img width="20" src="~/Multimedia/Atores/@item.actor.Photograph"> @item.actor.Name</td>
                    <td onclick="location.href='@Url.Action("Details", "Characters", new { id = item.ID })'"> @item.Name</td>
                </tr>
            }
        </table>

        <hr />
        <h5>Directors</h5>
        <table style="width:100%">
            <tr>
                <th>Name</th>
            </tr>
            @foreach (var item in Model.DirectorList)
            {
                <tr style="cursor:pointer">
                    <td onclick="location.href='@Url.Action("Details","Directors",new { id = item.ID })'"><img width="20" src="~/Multimedia/Directores/@item.Photograph"> @item.Name</td>
                </tr>
            }
        </table>

        <hr />
        <h5>Writters</h5>
        <table class="table-responsive" style="width:100%">
            <tr>
                <th>Writter</th>
            </tr>
            @foreach (var item in Model.WriterList)
            {
                <tr style="cursor:pointer">
                    <td onclick="location.href='@Url.Action("Details","Writers",new { id = item.ID })'"><img width="20" src="~/Multimedia/Writers/@item.Photograph"> @item.Name</td>
                </tr>
            }
        </table>

        <hr />

        <h6>Comments</h6>
        <hr />
        @foreach (var item in Model.Comments)
        {
            <h7>Username</h7>

            <p>@item.Text</p>

            <hr />
        }

    </div>

</div>
