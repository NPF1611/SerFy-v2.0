@model SerFy_v2._0.Models.Director

@{
    ViewBag.Title = "Details";
}
<div class="container" style="margin-top:30px">
    <div class="row">
        <button class="btn btn-default">@Html.ActionLink("Change", "Edit", new { id = Model.ID })</button>
        <button class="btn btn-default btn-danger">@Html.ActionLink("Delete", "Delete", new { id = Model.ID })</button>@*Not working*@
    </div>
</div>

<div class="container" style="margin-bottom:40px;margin-top:40px">
    <div class="row">
        <div class="col-lg-4">
            <img class="img-rounded" style="object-fit:cover" height="500" width="350" src="~/Multimedia/Directores/@Model.Photograph" />
        </div>
        <div class="col-lg-4">
            <p style="margin-top:5px"><b>Name :</b>@Model.Name</p>
            <p style="margin-top:5px"><b>Biography :</b>@Model.MiniBio</p>
            <p style="margin-top:5px"><b>Birthday:</b> @Model.Place_BD.ToString("dd/MM/yyyy")</p>
            <p style="margin-top:5px"><b>Movie:</b></p>
            <div class="container"></div>
            <div class="row">
                @foreach (var i in Model.MovieList)
                {
                    <div class="col-lg-4" style="position: relative; text-align: center; color: black;" onclick="location.href='@Url.Action("Details", "Movies", new { id = i.ID })'">
                        <img src="~/Multimedia/Filme/@i.Photograph" style="cursor:pointer" class="img-rounded img-responsive" />
                        @i.Name
                    </div>
                }

            </div>
        </div>
    </div>
</div>
