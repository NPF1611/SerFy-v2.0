@model SerFy_v2._0.Models.Comment

@{
    ViewBag.Title = "Delete";
}



<div class="center-block center text-center">
    <h3>Are you sure you want to delete the following Comment ?</h3>
    <p>@Model.Text</p>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input name="confirm" type="submit" value="Delete" class="btn btn-danger btn-default" />
        <button name="confirm" type="submit" value="NotToDelete" class="btn btn-default">I've changed my mind</button>
    }
</div>