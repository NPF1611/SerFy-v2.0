@model SerFy_v2._0.Models.Writer

@{
    ViewBag.Title = "Details";
}

@if (User.IsInRole("Administrador"))
{
    <div class="container" style="margin-top:30px">
        <div class="row">
            <button class="btn btn-default" onclick="location.href='@Url.Action("Edit", "Writers", new { id = Model.ID })'">@*@Html.ActionLink("Change", "Edit", new { id = Model.ID })*@Edit Writer</button>
            <button class="btn btn-default btn-danger" onclick="location.href='@Url.Action("Delete", "Writers", new { id = Model.ID })'">@*@Html.ActionLink("Delete", "Delete", new { id = Model.ID })*@Delete Writer</button>
        </div>
    </div>
}

<div class="container" style="margin-bottom:40px;margin-top:40px">
    <div class="row">
        <div class="col-lg-4">
            <img class="img-rounded" style="object-fit:cover" height="500" width="350" src="~/Multimedia/Writers/@Model.Photograph" />
        </div>
        <div class="col-lg-4">
            <p style="margin-top:5px"><b>Name :</b>@Model.Name</p>
            <p style="margin-top:5px"><b>Biography :</b>@Model.MiniBio</p>
            <p style="margin-top:5px"><b>Birthday:</b> @Model.Place_DB.ToString("dd/MM/yyyy")</p>
            <p style="margin-top:5px"><b>Movies written:</b></p>
            <div class="container"></div>
            <div class="row">
                @foreach (var i in Model.MoviesList)
                {
                    <div class="col-lg-4" style="position: relative; text-align: center; color: black;" onclick="location.href='@Url.Action("Details", "Movies", new { id = i.ID })'">
                        <img src="~/Multimedia/Filme/@i.Photograph" style="cursor:pointer" class="img-rounded img-responsive" />
                        @i.Name
                    </div>
                }

            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back", "Index", "", new { @class = "btn btn.default btn-info" })
</div>