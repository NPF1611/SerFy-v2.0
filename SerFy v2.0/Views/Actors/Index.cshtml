@model IEnumerable<SerFy_v2._0.Models.Actors>

@{
    ViewBag.Title = "Index";
}

@if (User.IsInRole("Administrador"))
{
    <button class="btn-default btn" onclick="location.href='@Url.Action("Create", "Actors")'" style="margin-top:20px"> Create a new Actor </button>
}
<div class="container" style="margin-top:20px">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-3">
                <div class="card">
                    <img style="object-fit:cover; cursor:pointer;" class=" img-rounded" height="300" width="200" src="~/Multimedia/Atores/@item.Photograph" onclick="location.href='@Url.Action("Details", "Actors", new { id = item.ID })'">
                    <div class="container">
                        <h4><b>@item.Name</b></h4>
                    </div>
                </div>
            </div>


        }
    </div>
</div>

