@model SerFy_v2._0.Models.Actors

@{
    ViewBag.Title = "Delete";
}

<div class="center-block center text-center">
    <h3>Are you sure you want to delete @Model.Name information ?</h3>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger btn-default" />
            <button class="btn btn-default">
                @Html.ActionLink("I've changed my mind", "Details", new { id= Model.ID })
            </button>
        </div>
    }
</div>

