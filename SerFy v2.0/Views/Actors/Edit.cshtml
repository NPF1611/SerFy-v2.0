@model SerFy_v2._0.Models.ViewModelEditActors

@{
    ViewBag.Title = "Edit";
}

<h2>Edit the actor @Model.Name</h2>


@using (Html.BeginForm("Edit", "Actors", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdValue)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Photograph, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control btn-default" type="file" name="photo" />
                <label hidden>
                    <input value="@Model.Photograph" class="form-control btn-default" type="text" name="oldphoto" />
                </label>
                @Html.ValidationMessageFor(model => model.Photograph, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Minibio, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Minibio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Minibio, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.BD, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input required class="form-control btn btn-default" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" name="date" />
                @Html.ValidationMessageFor(model => model.BD, "", new { @class = "text-danger" })


            </div>
        </div>

        <div class="form-group">

            <div class="col-md-offset-2 col-md-10">
                @Html.LabelFor(model => model.IdsCha)
                @Html.Partial("ListChaCreateEdit", Model)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" value="2" name="valueButton" class="btn btn-default">Save</button>
            </div>
        </div>


    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
